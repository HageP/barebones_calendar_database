<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
<!-- Validation failure messages -->
<% if @event.errors.any? %>
  <% @event.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>New Booking</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_event" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">


      <!-- Label and input for apartment_id -->
      <div class="form-group">
        <label for="apartment_id" class="control-label">
          Apartment
        </label>

        <input type="text" id="event" name="event" placeholder="event" class="form-control" value="12">
      </div>

      <!-- Label and input for tenant_id -->
      <div class="form-group">
        <label for="tenant_id" class="control-label">
          Tenant
        </label>

        <%= select_tag(:tenant_id, options_from_collection_for_select(Tenant.all, :id, :tenant_name, @event.tenant_id), :class => "form-control") %>
      </div>

      <!-- Label and input for status_id -->
      <div class="form-group">
        <label for="status_id" class="control-label">
          Status
        </label>

        <%= select_tag(:status_id, options_from_collection_for_select(Status.all, :id, :status_name, @event.status_id), :class => "form-control") %>
      </div>


      <!-- Label and input for title -->
      <div class="form-group">
        <label for="title" class="control-label">
          Tenant Name
        </label>

        <input type="text" id="title" name="title" placeholder="Title" class="form-control" value="<%= @event.title %>">
      </div>




      <!-- Label and input for start_time -->
      <div class="form-group">
        <label for="start_time" class="control-label">
          Start Date
        </label>

        <input id="start_time" name="start_time" placeholder="Start Date" class="form-control" type="date" value="<%= @event.start_time %>">
      </div>

      <!-- Label and input for end_time -->
      <div class="form-group">
        <label for="end_time" class="control-label">
          End Date
        </label>

        <input id="end_time" name="end_time" placeholder="End Date" class="form-control" type="date" value="<%= @event.end_time %>">
      </div>

      <!-- Label and input for resourceId -->
      <div class="form-group">
        <label for="resourceId" class="control-label">
          Apartment
        </label>
          <%= select_tag(:resourceId, options_from_collection_for_select(Apartment.all, :id, :apartment_name, @event.resourceId), :class => "form-control") %>


      </div>

      <button class="btn btn-success">
        Create Event
      </button>
      or
      <a href="/events">Cancel</a>
    </form>
  </div>
</div>
